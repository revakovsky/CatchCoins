<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/castle"
    tools:context=".fragments.GameFragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/back_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/arrrow_button"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/irish_grover"
            android:shadowColor="@color/main"
            android:shadowRadius="10"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/irish_grover"
            android:shadowColor="@color/main"
            android:shadowRadius="10"
            android:text="@string/plug"
            android:textColor="#FAA03A"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/coin_counter"
            android:scaleType="fitCenter"
            android:src="@drawable/coin_counter" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/game_over_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/max_score_dashboard"
            android:src="@drawable/game_over" />

        <TextView
            android:id="@+id/max_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/irish_grover"
            android:shadowColor="@color/main"
            android:shadowRadius="10"
            android:text="@string/game_over"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/irish_grover"
            android:shadowColor="@color/main"
            android:shadowRadius="10"
            android:text="@string/you_lose_your_coins"
            android:textAlignment="center"
            android:textColor="#FAA03A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/start_new_game_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/irish_grover"
            android:text="@string/start_new_game"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close_game_over_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:contentDescription="@string/close_button"
            android:src="@drawable/close_button" />

    </FrameLayout>

</FrameLayout>